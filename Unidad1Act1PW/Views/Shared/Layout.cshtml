@{
    ViewData["Title"] = "Layout";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Mi Perfil</title>
    <style>

        h1{
            text-align:center;
            padding:20px;
        font-family:Verdana, Geneva, Tahoma, sans-serif;
        color:white;
        }
        .div{
            background-color: #bde0ff;
            font-size:20px;
            font-family:Verdana;

            
        }

        img{
            height: 150px;
            display: flex;
            margin: auto;
            width: 150px;
            padding:5px
        }
        dl{
            text-align:center;
            padding:20px;
            margin:auto;
            width: 45%;
            
        }
        p{
            text-align:center;
        }
        header {
            height: 80px;
            background-color: #58b0ff;
        }
        body{
            margin: 0;
            padding: 0;
            background-color: #a4d4ff;
        }
        footer{
            width: 100%;
            position: fixed;
            bottom:0;
            background-color: #58b0ff;
        }

    </style>
</head>
<body>
    <header>
        <h1>Perfil</h1>
    </header>
    <main>
        <div class="div">
        @RenderBody()
        </div>
    </main>
    <footer>
        <div class="footer">
            <p>Programación Web - Unidad 1</p>
        </div>
    </footer>
</body>
</html>